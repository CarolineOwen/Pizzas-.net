@page
@model Pizzas.Pages.Admin.PizzasMiam.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pizza</h4>
<hr />
<div class="row">
    <div class="col-md-4">
       @* méthode post pour soumettre un formulaire*@
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Pizza.Id" />
            <div class="form-group">
                <label asp-for="Pizza.Nom" class="control-label"></label>
                <input asp-for="Pizza.Nom" class="form-control" />
                <span asp-validation-for="Pizza.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pizza.Prix" class="control-label"></label>
                <input asp-for="Pizza.Prix" class="form-control" />
                <span asp-validation-for="Pizza.Prix" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Pizza.Vegetarienne" /> @Html.DisplayNameFor(model => model.Pizza.Vegetarienne)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Pizza.Ingredients" class="control-label"></label>
                <input asp-for="Pizza.Ingredients" class="form-control" />
                <span asp-validation-for="Pizza.Ingredients" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*à la soumission du formulaire on va atterir dans le Onpost asyn du fichier Edit.cs*@
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
