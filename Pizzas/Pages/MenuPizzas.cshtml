@page
@model Pizzas.Pages.MenuPizzasModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css" />

    <title>Menu Pizzas</title>
</head>
<body>
    <a asp-page="Index">
        <img src="~/Images/small_logo.png" id="small_margin" />
    </a>

    <h1>Les pizzas - Carte</h1>
    <ul>
        @foreach(var piz in Model.Pizza)
        {
            <li>@piz.Nom - @piz.Prix €</li>
            <li class="grey">@piz.Ingredients</li>
            if(piz.Vegetarienne)
            {
                <span class="vege">Végé</span>
            }

            <br/><br />
        }

    </ul>
   
</body>
</html>

